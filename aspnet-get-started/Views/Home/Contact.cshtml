@{
    ViewBag.Title = "DevOps as a Service Platform";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Include Bootstrap CSS link here -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .jumbotron {
            background-color: #007bff;
            color: #fff;
        }

            .jumbotron a {
                color: #fff;
            }

        .card {
            border: 1px solid #17a2b8;
            transition: transform 0.3s;
        }

            .card:hover {
                transform: scale(1.05);
            }

        .card-title {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <header class="text-center">
            <h1 class="mb-4">DevOps as a Service Platform</h1>
            <p class="lead">Insightful IT Services LLP</p>
        </header>

        <section class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-5">
                    <div class="card-header bg-info text-white">
                        Welcome Note
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">Insightful IT Services LLP</h5>
                        <p class="card-text">Empower your development and operations with our advanced DevOps as a Service platform. Experience streamlined processes, continuous integration, automated deployment, and more.</p>
                        <a href="#contact" class="btn btn-primary">Contact Us</a>
                    </div>
                </div>
            </div>
        </section>

        <section class="mt-5 text-center">
            <h2>Our DevOps Services</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5 class="card-title">Continuous Integration</h5>
                            <p class="card-text">Efficiently integrate code changes, ensuring reliability and quality.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5 class="card-title">Automated Deployment</h5>
                            <p class="card-text">Deploy applications seamlessly with automated processes.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <div class="card-body">
                            <h5 class="card-title">Infrastructure as Code</h5>
                            <p class="card-text">Manage infrastructure efficiently with code-based configurations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="mt-5 text-center">
            <h2>Why Choose Insightful IT Services?</h2>
            <p class="lead">Experience the difference with our tailored DevOps solutions. We focus on efficiency, scalability, and reliability to accelerate your development lifecycle.</p>
            <a href="#contact" class="btn btn-primary mt-3">Get Started</a>
        </section>

        <section id="contact" class="mt-5 text-center">
            <h2>Contact Us</h2>
            <p>Have questions or ready to get started? Reach out to our team for personalized assistance.</p>
            <!-- Add a contact form or contact information -->
        </section>
    </div>

    <!-- Include Bootstrap JS and other scripts if needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

</body>
</html>
